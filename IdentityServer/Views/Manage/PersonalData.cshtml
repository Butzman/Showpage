@using IdentityServer.Resources
@using IdentityServer.Views.Helper
@{
    ViewData["Title"] = @SharedResource.PERSONAL_DATA;
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@SharedResource.PERSONAL_DATA_INFO</p>
        <p>
            <strong>@SharedResource.PERSONAL_DATA_DELETEINFO</strong>
        </p>
        <form asp-action="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@SharedResource.DOWNLOAD</button>
        </form>
        <p>
            <a asp-action="DeletePersonalData" class="btn btn-primary">@SharedResource.DELETE</a>
        </p>
    </div>
</div>

