@using IdentityServer.Resources
@using IdentityServer.Views.Helper
@model SetPasswordViewModel
@{
    ViewData["Title"] = @SharedResource.SET_PASSWORD;
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4>@SharedResource.SET_YOUR_PASSWORD</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<p class="text-info">
    @SharedResource.SET_PASSWORD_TEXT
</p>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword">@SharedResource.PASSWORD</label>
                <input asp-for="NewPassword" class="form-control"/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">@SharedResource.CONFIRM_PASSWORD</label>
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@SharedResource.SET_PASSWORD</button>
        </form>
    </div>
</div>