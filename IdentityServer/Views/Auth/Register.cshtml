@model RegisterViewModel
<div class="col my-5 justify-content-center">
    <div class="m-auto" style="max-width: 500px">
    <h3 class="my-5">Register new Account</h3>
        <form class="m-auto"  asp-controller="Auth" asp-action="Register" method="post">
            <input type="hidden" asp-for="ReturnUrl">
            <div class="form-group">
                <label >Username</label>
                <input class="form-control" asp-for="Username">
                <span   asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-outline-success" type="submit">Sign Up</button>
                <a class="ml-5" asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">...or go back to Login</a>
            </div>
        </form>
        </div>
</div>