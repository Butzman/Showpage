@model LoginViewModel
<div class="row m-4 justify-content-center">
        <div class="col m-auto" style="max-width: 500px">
            <h4>Login by Credentials</h4>
            <form class="m-4" asp-controller="Auth" asp-action="Login" method="post">
                <input type="hidden" asp-for="ReturnUrl">
                <div class="form-group">
                    <label >Username</label>
                    <input class="form-control" asp-for="Username">
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-control" asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-success" type="submit">Sign In</button>
                    <a class="ml-5" asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl"> ...or Register</a>
                </div>
            </form>
        </div>
        <div class="col px-5" style="border-left: #6c757d 3px solid; max-width: 500px">
            <h4>Login by Facebook</h4>
            <div class="form-group">
                <form class="m-4" asp-controller="Auth" asp-action="ExternalLogin"
                      asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalProviders)
                    {
                        <button class="btn btn-outline-primary" name="provider" value="@provider.Name" type="submit">
                            @provider.Name
                        </button>
                    }
                </form>
            </div>
        </div>
</div>