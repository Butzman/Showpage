@using IdentityServer.Resources
@model LoginViewModel

<div class="row m-4 justify-content-center">
    <div class="col col-md-6 m-auto">
        <h4>@SharedResource.ACCOUNT_LOGIN</h4>
        <form class="m-4" asp-controller="Auth" asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl">
            <div class="form-group">
                <label >@SharedResource.USERNAME</label>
                <input class="form-control" asp-for="Username">
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label >@SharedResource.PASSWORD</label>
                <input class="form-control" asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group row">
                <div class="checkbox col-md-1">
                    <input asp-for="RememberLogin" class="big_checkbox"/>
                </div>
                <label class="col-md-11 control-label">@SharedResource.REMEMBER_ME</label>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">@SharedResource.ACCOUNT_LOGIN</button>
                <a class="ml-5" asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">@SharedResource.REGISTER_AS_NEW_USER</a>
            </div>
        </form>
    </div>
    <div class="col col-md-6 px-5" style="border-left: #6c757d 3px solid;">
        <h4>@SharedResource.EXTERNAL_LOGINS</h4>
        <div class="form-group">
            <form class="m-4" asp-controller="Auth" asp-action="ExternalLogin"
                  asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @foreach (var provider in Model.ExternalProviders)
                {
                    <button class="btn btn-outline-primary" name="provider" value="@provider.Name" type="submit">
                        @provider.Name
                    </button>
                }
            </form>
        </div>
    </div>
</div>